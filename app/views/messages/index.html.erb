<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <table class="table">
    <thead>
      <tr>
        <th>名前</th>
        <th>内容</th>
      </tr>
    </thead>
    <tbody>
      
    <% @messages.each do |message| %>
    <tr>
      <th><span class="label label-info"><%= message.name %></span></th>
      <th><span class="label label-success"><%= message.body %></span></th>
    </tr>
      
    <% end %>
    </tbody>
  </table>
</div>

<%= form_for(@message) do |f| %>
  名前:
  <%= f.text_area :name %>

  内容:
  <%= f.text_area :body %>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>