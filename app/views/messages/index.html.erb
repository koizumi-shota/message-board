<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <table class="table">
    <thead>
      <tr>
        <th>名前</th>
        <th>内容</th>
      </tr>
    </thead>
    <tbody>
      
    <% @messages.each do |message| %>
    <tr>
      <th><span class="label label-info"><%= message.name %></span></th>
      <th><span class="label label-success"><%= message.body %></span></th>
    </tr>
      
    <% end %>
    </tbody>
  </table>
</div>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label for="message_name" class="control-label col-md-2">名前:</label>
    <div class="col-md-8">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <label for="message_name" class="control-label col-md-2">内容:</label>
    <div class="col-md-8">
      <%= f.text_area :body, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">送信</button>
    </div>
  </div>
<% end %>